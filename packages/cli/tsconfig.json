{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "jsx": "preserve",
    "skipLibCheck": true,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "ignoreDeprecations": "5.0",
    "suppressImplicitAnyIndexErrors": true,
    "declaration": true,
    "outDir": "./lib",
  },
  "include": [
    "src",
    "./typings",
    "../../typings"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "__test__"
  ]
}
